<div class="card card-login mt-5">
  <div class="card-header card-header-primary">
    <h4 class="card-title">Welcome back!</h4>
    <p class="card-category">Please sign in</p>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email Address", required: "", autofocus: "" %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", required: "" %>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="col-md-12">
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Sign in", class: "btn btn-primary btn-block" %>
    </div>
    <% end %>

    <div class="clearfix"></div>

    <div class="row mt-4 shared-links ">
      <div class="col-md-12">
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <p class="mt-4 text-muted">Â© <%= DateTime.now.year %> Nuggets | JEA</p>
  </div>
</div>